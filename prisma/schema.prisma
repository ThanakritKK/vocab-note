generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Vocab {
  id          Int      @id @default(autoincrement()) // รหัส (1, 2, 3...) สร้างเองอัตโนมัติ
  word        String   // คำศัพท์
  definition  String   // คำแปล
  category    String   // หมวดหมู่
  isMemorized Boolean  @default(false) // จำได้หรือยัง?
  createdAt   DateTime @default(now()) // วันที่จด
  userId      String  
}